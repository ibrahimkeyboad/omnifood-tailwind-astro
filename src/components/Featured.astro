---
import { Image } from 'astro:assets';

import techcrunch from '../img/logos/techcrunch.png'
import businessInsider from '../img/logos/business-insider.png'
import theNewYorkTimes from '../img/logos/the-new-york-times.png'
import forbes from '../img/logos/forbes.png'
import usaToday from '../img/logos/usa-today.png'
---

<section class='pt-[4.8rem] pb-[3.2rem]'>
  <div class='container'>
    <h2
      class='text-[1.4rem] uppercase tracking-[0.75px] font-medium text-center mb-[2.4rem] text-[#888]'
    >
      As featured in
    </h2>
    <div class='flex justify-around'>
      <Image
        width={100}
        height={100}
        class='h-[3.2rem] brightness-0 opacity-50'
        src={techcrunch}
        alt='Techcrunch logo'
      />
      <Image
        width={100}
        height={100}
        class='h-[3.2rem] brightness-0 opacity-50'
        src={businessInsider}
        alt='Business Insider logo'
      />
      <Image
        width={100}
        height={100}
        class='h-[3.2rem] brightness-0 opacity-50'
        src={theNewYorkTimes}
        alt='The New York Times logo'
      />
      <Image
        width={100}
        height={100}
        class='h-[3.2rem] brightness-0 opacity-50'
        src={forbes}
        alt='Forbes logo'
      />
      <Image
        width={100}
        height={100}
        class='h-[3.2rem] brightness-0 opacity-50'
        src={usaToday}
        alt='USA Today logo'
      />
    </div>
  </div>
</section>
